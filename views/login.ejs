<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>登录页面</title>

    <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/login.css">
    <!--[if lt IE9] >
    <script type="text/javascript" src="js/html5.js"></script>
    <script type="text/javascript" src="js/placeholder-1.0.min.js"></script>
    <![endif]-->
</head>
<body>

<div class="login_bg">
    <form   method = 'post' action="/login" >
    <div class="w545">
        <div class="logo">
            <div class="logo_left">
                <h1>
                    <a href="javascript:;">
                        <img src="images/login/logo.png"  alt="">
                    </a>
                </h1>
            </div>
            <div class="logo_right">
                商户店铺管理后台
            </div>
        </div>
        <div class="w440">
            <h2 class="lmb">
                用户登录
            </h2>
            <div class="input lmb">
                <div class="lleft">
                    <i class="fa fa-user"></i>
                </div>
                <div class="rright">
                    <input id="user" class="login_text" name="user"  type="text" placeholder="请输入用户名">
                </div>
            </div>
            <div class="input">
                <div class="lleft">
                    <i class="fa fa-unlock-alt"></i>
                </div>
                <div class="rright">
                    <input id="pass"  class="login_text" name="password" type="password" placeholder="请输入密码">
                </div>
            </div>
            <div class="login_password lmb">
                <div class="lleft">
                    <label ><input  class="logon_box" type="checkbox"> 记住密码</label>
                </div>
                <div class="rright">
                    <a href="javascript:;">忘记密码？</a>
                </div>
            </div>
            <div class="login_btn">
                <button onclick="checkUser();return false;">
                    立即登录
                </button>
            </div>

        </div>
    </div>

    </form>




</div>



<script type="text/javascript" src="js/jquery.min.js"></script>
<script>

    function checkUser() {
        var user = $("#user").val();
        var pass = $("#pass").val();
        if(user == ''){
            alert("用户名不能为空");
            return false;
        }
        if(pass == ''){
            alert("密码不能为空");
            return false;
        }
        $("form").submit();
    }
    
</script>
</body>
</html>